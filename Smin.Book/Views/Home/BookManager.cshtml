
@{
    ViewBag.Title = "BookManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    @* Start header *@
    <div class="header">
        <button id="btnCreate" class="btn btn-primary"><i class="fas fa-plus-square mr-1"></i>Create</button>
        <button id="btnEdit" class="btn btn-success mx-2"><i class="fas fa-edit mr-1"></i>Edit</button>
        <button id="btnDelete" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
    </div>
    <div class="body">
        <table id="bookTable" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th id="test">Book ID</th>
                    <th>Name</th>
                    <th>Editor</th>
                    <th>Fiction</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Release Year</th>
                    <th>Creator</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title">Nhập thông tin</h5>
                <button class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row mb-2">
                        <label class="col-3" for="#inputBookId">Book ID: </label>
                        <input id="inputBookId" class="form-control col-9" type="text" required />
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputName">Name: </label>
                        <input id="inputName" class="form-control col-9" type="text" required/>
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputEditor">Editor: </label>
                        <input id="inputEditor" class="form-control col-9" type="text" required/>
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputFiction">Fiction: </label>
                        <input style="width: 25px; height: 25px;" id="inputFiction" class="" type="checkbox" />
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputType">Type: </label>
                        <input id="inputType" class="form-control col-9" type="text" required />
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputPrice">Price: </label>
                        <input id="inputPrice" class="form-control col-9" type="text" required />
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputReleaseYear">Release Year: </label>
                        <input id="inputReleaseYear" class="form-control col-9" type="text"  required/>
                    </div>
                    <div class="row mb-2">
                        <label class="col-3" for="#inputCreator">Creator: </label>
                        <input value="ADMIN" id="inputCreator" class="form-control col-9" type="text" required />
                    </div>
                    <div class="text-danger" id="inputNotice"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnConfirm" class="btn btn-primary">Confirm</button>
                <button class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>
</div>